<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    tools:context=".activitesfragments.profile.FavouriteTabF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/black"
            app:tabIndicatorHeight="0dp"
            app:tabMode="fixed"
            app:tabPaddingEnd="@dimen/_6sdp"
            app:tabPaddingStart="@dimen/_6sdp"
            app:tabSelectedTextColor="@color/black"
            app:tabTextAppearance="@style/tabStyle"
            app:tabTextColor="@color/darkgray" />

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/tabBottomLine"
            android:layout_below="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:alpha="0.4"
            android:layout_centerHorizontal="true"
            android:background="@color/gainsboro" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tabBottomLine"/>

    </RelativeLayout>

</FrameLayout>