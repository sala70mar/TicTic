<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="@dimen/_4sdp"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold"
        android:textColor="@color/darkgray"
        android:background="@drawable/d_round_gray_background_2"
        android:id="@+id/datetxt"/>


    <RelativeLayout
        android:id="@+id/tabStory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datetxt"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_6sdp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/userStory"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_6sdp"
            app:placeholderImage="@drawable/image_placeholder" />


        <TextView
            android:id="@+id/storyEmoticon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_78sdp"
            android:layout_marginEnd="@dimen/_55sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:background="@drawable/d_other_msg_background"
            android:gravity="start|center_vertical"
            android:paddingStart="@dimen/_15sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:text="@string/your_message"
            android:textAlignment="viewStart"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/_11sdp" />


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tabStory"
        android:textSize="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:id="@+id/message_seen"
        android:gravity="start|center_vertical"
        android:textAlignment="viewStart"
        android:textColor="@color/darkgray"
        android:layout_marginEnd="@dimen/_6sdp"/>

</RelativeLayout>