<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        tools:context=".activitesfragments.profile.videopromotion.VideoPromoteStepSelectBudgetF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnNext"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_15sdp">

            <LinearLayout
                android:id="@+id/tabTotalCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_44sdp"
                android:gravity="start|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTotalCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_19sdp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tvDayTotalCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" coin spent over 0 day"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_19sdp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:gravity="start|center_vertical"
                android:lineSpacingExtra="@dimen/_4sdp"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/_20sdp"
                android:text="@string/estimated_total_cost"
                android:textAlignment="viewStart"
                android:textColor="@color/darkgray"
                android:textSize="@dimen/_11sdp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvTotalViews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="start|center_vertical"
                android:text="0 +"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_19sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:gravity="start|center_vertical"
                android:lineSpacingExtra="@dimen/_4sdp"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/_20sdp"
                android:text="@string/estimated_video_views"
                android:textAlignment="viewStart"
                android:textColor="@color/darkgray"
                android:textSize="@dimen/_11sdp"
                android:textStyle="normal" />


            <RelativeLayout
                android:id="@+id/tabBudget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_44sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="start|center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|start"
                        android:text="@string/budget"
                        android:textAlignment="viewStart"
                        android:textColor="@color/darkgray"
                        android:textSize="@dimen/_11sdp" />

                    <LinearLayout
                        android:id="@+id/tabBudgetInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:gravity="start|center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:src="@drawable/ic_coin" />

                        <TextView
                            android:id="@+id/tvBudgetInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:gravity="center"
                            android:text=" 0 Per day"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <com.qboxus.tictic.activitesfragments.argear.widget.CustomSeekBar
                        android:id="@+id/seekbarBudget"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:max="1000"
                        android:maxHeight="@dimen/_5sdp"
                        android:minHeight="@dimen/_5sdp"
                        android:progress="0"
                        android:progressDrawable="@drawable/promote_seekbar_selector"
                        android:secondaryProgress="0"
                        android:theme="@style/MySeekBar2"
                        android:thumb="@drawable/sb_thumb" />
                </LinearLayout>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@color/gainsboro" />


            <RelativeLayout
                android:id="@+id/tabDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_22sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="start|center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|start"
                        android:text="@string/duration"
                        android:textAlignment="viewStart"
                        android:textColor="@color/darkgray"
                        android:textSize="@dimen/_11sdp"
                        android:thumb="@drawable/sb_thumb" />

                    <LinearLayout
                        android:id="@+id/tabDurationInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:gravity="start|center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDurationInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/zero_day"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <com.qboxus.tictic.activitesfragments.argear.widget.CustomSeekBar
                        android:id="@+id/seekbarDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:max="7"
                        android:maxHeight="@dimen/_5sdp"
                        android:minHeight="@dimen/_5sdp"
                        android:progress="0"
                        android:progressDrawable="@drawable/promote_seekbar_selector"
                        android:secondaryProgress="0"
                        android:theme="@style/MySeekBar2"
                        android:thumb="@drawable/sb_thumb" />

                </LinearLayout>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@color/gainsboro" />


        </LinearLayout>


        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_34sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:background="@drawable/btn_promotion_blur"
            android:clickable="false"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/next"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/_11sdp" />

    </RelativeLayout>
</layout>