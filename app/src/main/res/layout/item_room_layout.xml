<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">


        <androidx.cardview.widget.CardView
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_4sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/appColor"
            app:cardCornerRadius="@dimen/_15sdp">

            <LinearLayout
                android:id="@+id/tabView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/_10sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/liveanimation"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_space_live" />

                    <TextView
                        android:id="@+id/tvClubName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/live"
                        android:textColor="@color/whiteColor"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/_5sdp"/>

                </LinearLayout>

                    <ImageView
                        android:id="@+id/menuBtn"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_alignParentEnd="true"
                        android:padding="@dimen/_5sdp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_black_dots"
                        app:tint="@color/whiteColor" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Room Name"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/_11sdp"
                    android:id="@+id/topicTxt"
                    android:layout_marginTop="@dimen/_5sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:paddingHorizontal="@dimen/_10sdp">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/ivProfileOne"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/image_placeholder"
                        fresco:roundAsCircle="true"/>

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/ivProfileSecond"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/image_placeholder"
                        fresco:roundAsCircle="true"/>

                    <TextView
                        android:id="@+id/tvMemberCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="@color/whiteColor"
                        android:textSize="@dimen/_16sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:text="@string/listening"
                        android:textColor="@color/whiteColor"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:orientation="horizontal"
                    android:background="@color/appColorDark"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_10sdp">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/adminimage"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/image_placeholder"
                        fresco:roundAsCircle="true"/>

                    <TextView
                        android:id="@+id/tvModeratorCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="@color/whiteColor"
                        android:textSize="@dimen/_16sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="@string/hosts"
                        android:background="@drawable/d_white_border"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_3sdp"
                        android:textColor="@color/appColorDark"
                        android:textSize="@dimen/_13sdp" />

                </LinearLayout>



            </LinearLayout>




        </androidx.cardview.widget.CardView>

</layout>